                <option value="science_technology">Science Technologies/Technicians</option>
                
                <option value="social_science">Social Sciences</option>
                
                <option value="theology_religious_vocation">Theology and Religious Vocations</option>
                
                <option value="transportation">Transportation and Materials Moving</option>
                
                <option value="visual_performing">Visual and Performing Arts</option>
    
            </select>
        </div>
    
        <div class="row">
            <div class="input-field col s6">
                <input id="price" type="text" class="validate">
                <label for="price">Maximum Tuition ($)</label>
            </div>
        </div>
        
        <div class="row">
            <a class="btn waves-effect waves-light blue" type="submit" name="action" id="submit">Submit
            </button></a>
            <button class="btn waves-effect waves-light" type="submit" name="action" id="guestSubmit">Guest Search
            </button>
        </div>
        </form>

        <div class="row" id="results">
            <div class="container">
                <h4>{{#if user}}
                    Hi, {{this.firstname}}, welcome back!
                {{/if}}
                </h4>
            <div class="collection"></div>
                {{#each colleges}}
                    <a href="{{this.URL}}" class="collection-item">
                        {{this.name}}, Average Salary: {{this.salary}}, Average Tuition: {{this.tution}}
                    </a>
                {{/each}}
            </div>
        </div>
        </div>
        
    </div>

   <script type="text/javascript">

   $(document).ready(function(){

    $("#submit").on("click", function(event){

        var userInput = {
            first_name: $("#first_name").val().trim(),
            last_name: $("#last_name").val().trim(),
            email: $("#email").val().trim(),
            degree_type: $("#degree").val().trim(),
            home_state: $("#state").val().trim(),
            program: $("#program").val().trim(),
            max_tuition: $("#price").val().trim() 
        };

        $.post("/api/students", userInput);
        console.log('userInput = ' + JSON.stringify(userInput));

        })


    })
   
   </script>
